<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemFileIcon"
        android:src="@drawable/p"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="File Name "
        android:id="@+id/listItemFileName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listItemFileIcon"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So this is how our file details should look, its not pretty but I think it should do"
        android:id="@+id/listItemFileDetails"
        android:layout_below="@+id/listItemFileName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listItemFileIcon"
        android:ellipsize="end"
        android:singleLine="true"/>

</RelativeLayout>
